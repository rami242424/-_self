<body>
    <script>
        // 나의 방식
        // var current = ('2023');
        // var birthYear = (prompt("태어난 연도를 입력하세요. (YYYY)"));
        
        // var age = current - birthYear + 1;
        // console.log(age)

        // document.write(current + "년 현재 <br>");
        // document.write(birthYear + "년에 태어난 사람의 나이는" + age + "세 입니다.");

        // 교안 방식
        var currentYear = 2023;
        var birthYear;
        var age;

        birthYear = prompt("태어난 연도를 입력하세요. (YYYY)", ""); // 여기서 뒤에 ""는 프롬프트값에 입력될 값, 1991로 적어두면 프롬프트 뜰때 자동으로 1991이 입력되어있음.
        
        age = currentYear - birthYear + 1;
        document.write(currentYear + "년 현재 <br>");
        document.write(birthYear + "년에 태어난 사람의 나이는" + age + '세 입니다.');
    
    </script>
