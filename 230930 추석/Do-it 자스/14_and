    <script>
      // 내가한것
      var num1 = prompt("50미만인 숫자를 입력하세요.");
      var num2 = prompt("50미만인 숫자를 입력하세요.");

      if (num1 !== null && num2 !== null){
        if(num1 < 50 && num2 < 50)
          alert("숫자 2개 모두 50미만이군요.")
        else 
          alert("조건에 맞지 않는 숫자가 있습니다.")
      } 
      else
        alert("입력이 취소되었습니다.");

      // 교재
      // var numberOne = prompt("50미만의 숫자를 입력하세요.");
